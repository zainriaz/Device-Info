<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".LightSensorTestActivity">

    <TextView
        android:id="@+id/txtLightValue"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/imgLightImage"
        android:layout_centerHorizontal="true"
        android:fontFamily="@font/google"
        android:text="30000 Lux"
        android:textSize="24sp"
        android:textStyle="bold" />

    <ImageButton
        android:id="@+id/imgbtn_failed"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="true"
        android:layout_marginBottom="50dp"
        android:layout_marginStart="100dp"
        android:backgroundTint="@android:color/transparent"
        android:tint="@color/test_failed"
        app:srcCompat="@drawable/test_failed" />

    <ImageButton
        android:id="@+id/imgbtn_success"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentEnd="true"
        android:layout_marginBottom="50dp"
        android:layout_marginEnd="100dp"
        android:backgroundTint="@android:color/transparent"
        android:tint="@color/test_success"
        app:srcCompat="@drawable/test_success" />

    <ImageView
        android:id="@+id/imgLightImage"
        android:layout_width="200dp"
        android:layout_height="300dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        app:srcCompat="@drawable/ic_light_sensor_image"/>

    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="123dp"
        android:paddingEnd="20dp"
        android:paddingStart="20dp"
        android:text="@string/lightsensor_test_question"
        android:textAlignment="center" />
</RelativeLayout>