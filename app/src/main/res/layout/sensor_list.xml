<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:card_view="http://schemas.android.com/apk/res-auto"
        style="?attr/cardStyle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="2dp"
        android:layout_marginEnd="6dp"
        android:layout_marginStart="6dp"
        android:layout_marginTop="2dp"
        card_view:cardCornerRadius="5dp"
        card_view:contentPadding="8dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:id="@+id/list_sensor_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:text="com.app.name"
                android:textSize="16sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/list_vendor_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignStart="@+id/list_sensor_name"
                android:layout_below="@+id/list_sensor_name"
                android:text="com.package.name"
                android:textSize="14sp" />

            <TextView
                android:id="@+id/list_sensor_type"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignStart="@+id/list_vendor_name"
                android:layout_below="@+id/list_vendor_name"
                android:text="com.version.name"
                android:textSize="14sp" />

            <TextView
                android:id="@+id/list_wake_up_type"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignStart="@+id/list_sensor_type"
                android:layout_below="@+id/list_sensor_type"
                android:text="com.version.name"
                android:textSize="14sp" />

            <TextView
                android:id="@+id/list_sensor_power"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignStart="@+id/list_wake_up_type"
                android:layout_below="@+id/list_wake_up_type"
                android:text="com.version.name"
                android:textSize="14sp" />

        </RelativeLayout>
    </android.support.v7.widget.CardView>
</FrameLayout>